{
    "name": "api-gateway",
    "version": "0.0.1",
    "description": "API gateway managing security and proxying to other backend services",
    "author": "Alexey Soloviev",
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "npm": ">=10.0.0 <11.0.0",
        "node": ">=18.0.0 <19.0.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start -e \"node --inspect=0.0.0.0\" --watch",
        "start:prod": "node dist/main",
        "lint": "npx eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "npm run lint -- --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "_moduleAliases": {
        "@": "./src"
    },
    "dependencies": {
        "@eggziom/geek-regime-js-commons": "0.0.64",
        "@eggziom/geek-regime-js-configs": "0.0.11",
        "@nestjs/axios": "1.0.1",
        "@nestjs/cli": "9.0.0",
        "@nestjs/common": "9.0.11",
        "@nestjs/config": "2.2.0",
        "@nestjs/core": "9.0.11",
        "@nestjs/jwt": "10.0.1",
        "@nestjs/passport": "9.0.0",
        "@nestjs/platform-express": "9.0.11",
        "@nestjs/serve-static": "3.0.0",
        "@types/cookie-parser": "1.4.9",
        "@types/passport-jwt": "4.0.1",
        "@types/passport-local": "1.0.38",
        "axios": "1.2.1",
        "class-transformer": "0.5.1",
        "class-validator": "0.13.2",
        "cookie-parser": "1.4.6",
        "dotenv": "16.4.5",
        "express": "4.18.1",
        "http-proxy-middleware": "2.0.6",
        "module-alias": "2.2.2",
        "passport": "0.6.0",
        "passport-jwt": "4.0.1",
        "passport-local": "1.0.0",
        "passport-yandex": "0.0.5",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "7.2.0"
    },
    "devDependencies": {
        "@nestjs/schematics": "9.0.1",
        "@nestjs/testing": "9.0.11",
        "@types/express": "4.17.13",
        "@types/jest": "27.5.0",
        "@types/node": "16.0.0",
        "@types/supertest": "2.0.11",
        "@typescript-eslint/eslint-plugin": "5.35.1",
        "@typescript-eslint/parser": "5.35.1",
        "eslint": "8.17.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-import-resolver-alias": "1.1.2",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-unicorn": "42.0.0",
        "jest": "28.0.3",
        "source-map-support": "0.5.20",
        "supertest": "6.1.3",
        "ts-jest": "28.0.1",
        "ts-loader": "9.2.3",
        "ts-node": "10.0.0",
        "tsconfig-paths": "4.0.0",
        "typescript": "4.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.test\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
