{
    "extends": "./node_modules/@eggziom/geek-regime-js-configs/dist/tsconfig.react.json",
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "paths": {
            "@/*": ["src/main/*"],
            "@test/*": ["src/test/*"]
        },
        "sourceMap": false,
        "types": [
            "@eggziom/geek-regime-js-commons/@types"
        ],
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@eggziom/geek-regime-js-commons/@types",
            "node_modules/@eggziom/geek-regime-js-ui-kit/@types",
            "@types"
        ]
    },
    "include": ["src/main", "src/test", "@types"]
}
